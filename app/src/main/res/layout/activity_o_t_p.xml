<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:elevation="12dp"
    android:layout_height="match_parent"
    tools:context=".Activity.OTPActivity">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginRight="10dp"
       android:id="@+id/close_icon"
       app:layout_constraintRight_toRightOf="parent"
       android:src="@drawable/ic_baseline_close_24"
       app:layout_constraintTop_toTopOf="parent"
       app:tint="@color/grey">

   </ImageView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_20_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="#fff"
        android:id="@+id/verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_20_h">

    </TextView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please type the verification code sent to you."
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#fff"

        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/verification_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/verification_code"
        >

    </TextView>



    <com.mukesh.OtpView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="number"
        android:itemBackground="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        app:OtpItemCount="6"
        app:layout_constraintTop_toBottomOf="@id/verification_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        app:OtpLineColor="@color/colorPrimary"
        app:OtpViewType="line"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resendLabel"
        android:text="Resend OTP"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/otp_view">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>